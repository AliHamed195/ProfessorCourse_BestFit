@model ProfessorCourse_BestFit.Models.ViewModels.CoursesViewModel




@{
    ViewBag.Title = ViewBag.id > 0 ? "Update Course" : "Add Course";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="text-muted">@(ViewBag.id > 0 ? "Update Course" : "Add Course")</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->

                    <div class="card @( ViewBag.id > 0 ? "card-success" :"card-primary")"">


                        <div class="card-header">

                            <h3 class="card-title">

                                @(ViewBag.id > 0 ? "Update Course" : "Add Course")
                            </h3>
                        </div>

                        <div class="col-12 text-danger @((ViewBag.Error != null ? "" : "d-none" ))" role="alert">
                            *@(ViewBag.Error != null ? @ViewBag.Error : "" )
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.CId)
                            <div class="card-body">
                                <div class="form-group d-flex col-12 justify-content-around">
                                    <div class="form-group col-5">
                                        <label>Course Name</label>
                                        @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Course Name" } })
                                        @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-5">
                                        <label>Course Code</label>
                                        @Html.EditorFor(model => model.CourseCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Course Code" } })
                                        @Html.ValidationMessageFor(model => model.CourseCode, "", new { @class = "text-danger" })
                                    </div>





                                </div>


                            </div>

                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a href="/Course/Index" class="btn btn-warning">
                                    <i class="bi bi-arrow-left"></i>
                                    Back
                                </a>
                                <button type="submit" class="btn @(ViewBag.id > 0 ? "btn-success" : "btn-primary")">@(ViewBag.id > 0 ? "Update" : "Submit")</button>
                            </div>
                        }
                    </div>
                    <!-- /.card -->


                </div>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
