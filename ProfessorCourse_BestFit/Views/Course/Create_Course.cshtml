@model ProfessorCourse_BestFit.Models.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create_Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Course</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

}

@{
    if (ViewBag.existName != null)
    {
        <div class="alert alert-warning" role="alert">
            <h3>
                @ViewBag.existName
            </h3>
            <hr />
            <p>
                @ViewBag.data_not_saved
            </p>
        </div>
    }
    if (ViewBag.savetitle == "Done...")
    {
        <div class="alert alert-success" role="alert">
            <h3>
                @ViewBag.savetitle
            </h3>
            <hr />
            <p>
                @ViewBag.savebody
            </p>
        </div>
    }
    else if (ViewBag.savetitle == "Failed!")
    {
        <div class="alert alert-danger" role="alert">
            <h3>
                @ViewBag.savetitle
            </h3>
            <hr />
            <p>
                @ViewBag.savebody
            </p>
        </div>
    }
}
<br />
<button class="btn btn-warning btnstyleDpartmentList" onclick="location.href='@Url.Action("All_Course", "Course")';return false;"> Back</button>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}