@section Scripts {
    
    <script>

        let cont = document.getElementById('card-body');
        
        $(window).on("load", function () {
            $.post("/Events/Event",
                function (response) {
                    html = $.parseHTML(response);
                    $('#card-body').append(html);

                    var x = document.getElementById("card-body").getElementsByTagName("a");
                    for (let i = 0; i < x.length; i++) {
                        if (x[i].href.startsWith('https://localhost:44328/event/')) {
                            x[i].href = 'https://erasmusplus-lebanon.org' + x[i].href.substring(23);
                            console.log(x[i].href)
                        }
                    }
                });

        });

        

