@model ProfessorCourse_BestFit.Models.ViewModels.ProgramViewModel
@{
    ViewBag.Title = "Delete_Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Program</h2>
<br />
<h4>Do you want to delete: @Model.Name</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </div>
}
<br />
<button class="btn btn-warning btnstyleDpartmentList" onclick="location.href='@Url.Action("All_Programs", "Program")';return false;"> Back</button>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
