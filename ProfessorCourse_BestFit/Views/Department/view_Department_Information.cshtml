@model ProfessorCourse_BestFit.Models.ViewModels.DepartmentViewModel


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Departments</h1>
                </div>
                <div class="col">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Contact</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xl-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Department</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">


                        <section class="content">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Department Information</h3>

                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">


                                            <h3>@Model.Department.Dep_Name</h3>


                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        </section>


                        <section class="content">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Department Managers</h3>

                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">


                                            <section class="content">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-12">


                                                            <div class="card">
                                                                <!-- /.card-header -->
                                                                <div class="card-body">
                                                                    <table id="example1" class="table table-bordered table-striped">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>#</th>
                                                                                <th>Managers Name</th>
                                                                                <th>Email</th>
                                                                                <th>Phone Number</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @{ int num = 0;}
                                                                            @if (Model.managers != null)
                                                                            {
                                                                                foreach (var item in Model.managers)
                                                                                {
                                                                                    <tr class="js-row">
                                                                                        <td>@(num++)</td>
                                                                                        <td>@item.FirstName @item.MiddleName @item.LastName</td>
                                                                                        <td>@item.Email</td>
                                                                                        <td>@item.Phone</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                        <tfoot>
                                                                            <tr>
                                                                                <th>#</th>
                                                                                <th>Managers Name</th>
                                                                                <th>Email</th>
                                                                                <th>Phone Number</th>
                                                                            </tr>
                                                                        </tfoot>

                                                                    </table>

                                                                    <!-- /.modal -->

                                                                </div>
                                                                <!-- /.card-body -->
                                                            </div>
                                                            <!-- /.card -->
                                                        </div>
                                                        <!-- /.col -->
                                                    </div>
                                                    <!-- /.row -->
                                                </div>
                                                <!-- /.container-fluid -->
                                            </section>


                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        </section>


                        <section class="content">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Department Employees</h3>

                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">


                                            <section class="content">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-12">


                                                            <div class="card">
                                                                <!-- /.card-header -->
                                                                <div class="card-body">
                                                                    <table id="example2" class="table table-bordered table-striped">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>#</th>
                                                                                <th>Employees Name</th>
                                                                                <th>Email</th>
                                                                                <th>Phone Number</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @{ int number = 0;}
                                                                            @if (Model.managers != null)
                                                                            {
                                                                                foreach (var item in Model.employee)
                                                                                {
                                                                                    <tr class="js-row">
                                                                                        <td>@(number++)</td>
                                                                                        <td>@item.FirstName @item.MiddleName @item.LastName</td>
                                                                                        <td>@item.Email</td>
                                                                                        <td>@item.Phone</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                        <tfoot>
                                                                            <tr>
                                                                                <th>#</th>
                                                                                <th>Employees Name</th>
                                                                                <th>Email</th>
                                                                                <th>Phone Number</th>
                                                                            </tr>
                                                                        </tfoot>

                                                                    </table>

                                                                    <!-- /.modal -->

                                                                </div>
                                                                <!-- /.card-body -->
                                                            </div>
                                                            <!-- /.card -->
                                                        </div>
                                                        <!-- /.col -->
                                                    </div>
                                                    <!-- /.row -->
                                                </div>
                                                <!-- /.container-fluid -->
                                            </section>


                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        </section>



                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row py-3">
            <div class="col-12">
                <a href="/Department/All_Departments" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Back</a>
                @if (Model.Department.isDeleted == false)
                {
                    <a href="/Department/Edit_Department_Name/@Model.Department.DepId" class="btn btn-success">Edit Name<i class="bi bi-arrow-right"></i></a>
                }
            </div>
        </div>
    </section>
    <!-- /.content -->


</div>

@section Scripts{

    <script>

        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });

        $(function () {
            $("#example2").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');
        });


    </script>


}



