@model ProfessorCourse_BestFit.Models.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "Create_Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Department</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Dep_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dep_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dep_Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-10"> 
                <table class="table" style="text-align:center;">
                    <tr class="table-group-divider">
                        name
                    </tr>
                    @for (int i = 0; i < Model.List_User_Details.Count; i++)
                    {
                        <div>
                            <label for=@Model.List_User_Details[i].UserId>@Model.List_User_Details[i].FirstName @Model.List_User_Details[i].LastName</label>
                            <input type="checkbox" id=@Model.List_User_Details[i].UserId/>
                        </div>
                    }
                </table>
                <select id="names" class="form-control">
                    <option>--Select Name--</option>

                    @for (int i = 0; i < Model.List_User_Details.Count; i++)
                    {
                        <option value=@Model.List_User_Details[i].UserId>@Model.List_User_Details[i].FirstName @Model.List_User_Details[i].LastName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="form-group">
    <div class="col-xl-offset-2 col-xl-10">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("ListDepartment", "Department")';return false;">Back</button>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
