@model IEnumerable<ProfessorCourse_BestFit.Models.User>


@{
    ViewBag.Title = "Index";
    int id = 1;
   
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="text-muted">Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    

                    <div class="card">
                        <div class="card-header">
                            <a href="/User/Create" class="btn btn-primary @(ViewBag.create_user != true ? "d-none" : "")">
                                <i class="bi bi-plus-circle"></i>

                            Create</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>FirstName</th>
                                        <th>MiddleName</th>
                                        <th>LastName</th>

                                        <th>Email</th>
                                        <th>DateOfBirth</th>

                                        <th>Phone</th>
                                        <th>Gender</th>
                                        <th>Created</th>

                                        <th>Address</th>
                                        <th>Education</th>
                                        <th>Role</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr class="delete-row">
                                            <td width="10%">@(id++)</td>
                                            <td width="10%">@item.FirstName</td>
                                            <td width="10%">@item.MiddleName</td>
                                            <td width="10%">@item.LastName</td>

                                            <td width="10%">@item.Email</td>
                                            <td>@item.DateOfBirth</td>

                                            <td width="10%">@item.Phone</td>
                                            <td width="10%">@item.Gender</td>


                                            <td width="10%">@item.CreatedOn.ToString("yyyy-MM-dd")</td>
                                            <td width="10%">@item.Address</td>
                                            <td width="10%">@item.Education</td>
                                            <td width="10%">@item.Role.RoleName</td>
                                            <td class="tg">

                                                <div class="d-flex test">
                                                    <a class="btn btn-outline-success  @(ViewBag.update_user != true ? "d-none" : "")" href="/User/Update/@item.Uid">
                                                        <i class="bi bi-pencil"></i>
                                                        Edit
                                                    </a>

                                                    <button type="button" class="btn mx-2 btn-outline-danger delete-btn my-delete  @(ViewBag.delete_user != true ? "d-none" : "")" data-toggle="modal" data-target="#modal-default" uid-data="@item.Uid">
                                                        <i class="bi bi-trash"></i>
                                                        Delete
                                                    </button>

                                                    <button type="button" class="btn mx-2 btn-outline-secondary js-reset-pass  @(ViewBag.update_user != true ? "d-none" : "")" data-toggle="modal" data-target="#modal-default1" uid-data="@item.Uid">
                                                        <i class="bi bi-arrow-clockwise"></i>                                                    Reset
                                                    </button>


                                                    <a class="btn btn-outline-warning  @(ViewBag.update_user != true ? "d-none" : "")" href="/User/userKeywords/@item.Uid">
                                                        <i class="bi bi-bag-check"></i>                                                    Skills
                                                    </a>
                                                </div>




                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                
                            </table>
                            <div class="modal fade" id="modal-default">
                                <div class="modal-dialog">
                                    <div class="modal-content bg-light">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Delete</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="ok">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this User?</p>
                                        </div>
                                        <div class="modal-footer justify-content-between">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            
                                                <i class="bi bi-x-circle"></i>
                                            Close</button>
                                            <button type="button" class="btn btn-danger delete-user" data-dismiss="modal">
                                                <i class="bi bi-trash"></i>
                                            Delete</button>
                                        </div>
                                    </div>
                                     /.modal-content 
                                </div>
                                 /.modal-dialog 
                            </div>

                            <div class="modal fade" id="modal-default1">
                                <div class="modal-dialog">
                                    <div class="modal-content bg-light">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Delete</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to reset password for this User?</p>
                                        </div>
                                        <div class="modal-footer justify-content-between">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">

                                                <i class="bi bi-x-circle"></i>
                                                Close
                                            </button>
                                            <button type="button" class="btn btn-danger reset-user" data-dismiss="modal">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>

                            


                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->











@section Scripts{

    <script>

        $(document).ready(function () {

            
           

            $('#example1').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });


            $('#example1 tbody').on('click', '.my-delete', function () {
                let button = $(this);
                $(".delete-user").on("click", function () {
                    $.ajax({
                        url: "/User/delete/" + button.attr("uid-data"),
                        method: "post",
                        success: function () {

                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Deleted  successfully',
                                showConfirmButton: false,
                                timer: 1500
                            })
                            setTimeout(function () {
                                location.reload()
                            }, 2000)
                            
                            

                        },

                        error: function () {

                        }
                    })

                })
            });

            $("#example1 tbody").on('click','.js-reset-pass' ,function () {
                let button = $(this);

                $(".reset-user").on("click", function () {
                    console.log('reseted')
                    $.ajax({
                        url: "/User/ResetPassword/" + button.attr("uid-data"),
                        method: "post",
                        success: function () {

                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Password reset successfully',
                                showConfirmButton: false,
                                timer: 1500
                            })


                        },

                        error: function () {

                        }
                    })

                })
            })


        });

             
       
         
        




    
    </script>


}