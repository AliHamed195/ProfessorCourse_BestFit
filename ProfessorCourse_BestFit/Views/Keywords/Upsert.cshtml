@model ProfessorCourse_BestFit.Models.ViewModels.KeywordsViewModel




@{
    ViewBag.Title = "Upsert";
    ViewBag.bodyClass = "sidebar-mini layout-navbar-fixed sidebar-collapse layout-fixed layout-footer-fixed sidebar-closed";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="text-muted">@(ViewBag.id > 0 ? "Update Keyword" : "Add Keyword" )</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card @(ViewBag.Error != null ? "card-danger" : ViewBag.id > 0 ? "card-success" :"card-primary")">
                        <div class="card-header">

                            <h3 class="card-title">@(ViewBag.Error != null ? @ViewBag.Error : ViewBag.id > 0 ? "Update Keyword" : "Add Keyword" ) </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.KId)
                            <div class="card-body">

                                <div class="form-group">
                                    <label>Keyword Name</label>
                                    @Html.EditorFor(model => model.kName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Keyword Name" } })
                                    @Html.ValidationMessageFor(model => model.kName, "", new { @class = "text-danger" })
                                </div>



                            </div>

                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a href="/Keywords/Index" class="btn btn-warning">
                                    <i class="bi bi-arrow-left"></i>
                                    Back
                                </a>
                                <button type="submit" class="btn @(ViewBag.id > 0 ? "btn-success" : "btn-primary")">@(ViewBag.id > 0 ? "Update" : "Submit")</button>
                            </div>
                        }
                    </div>
                    <!-- /.card -->


                </div>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
